# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Home page
GET     /                   		Application.index
GET		/rules						Application.showRule
GET     /rules/{rule}				Application.showRule

GET		/signup						Security.signup
POST	/signup						Security.createPlayer

GET		/challenge					Games.challenge
GET		/challenge/{email}			Games.createChallenge
GET		/results					Games.results
GET		/results/{email}			Games.resultsForUser
POST	/result/{gameId}			Games.logResult

*      /                			module:secure
*      /admin              			module:crud

# Ignore favicon requests
GET     /favicon.ico         		404

# Map static resources from the /app/public folder to the /public path
GET     /public/             		staticDir:public

# Catch all
*       /{controller}/{action}		{controller}.{action}